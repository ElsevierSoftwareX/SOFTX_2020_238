		--seed $(SEED_10) \
		--output $@

clean :
	rm $(BNS_INJECTION_1) $(BNS_INJECTION_2) $(NSBH_INJECTION_1) $(NSBH_INJECTION_2) $(NSBH_INJECTION_3) $(BBH_INJECTION_1) $(BBH_INJECTION_2) $(IMBH_INJECTION_1) $(IMBH_INJECTION_2) $(IMBH_INJECTION_3)

