## @file

## @package gstlal_ll_inspiral_save_state

DESTINATION="${1}"
shift

echo sleeping...
sleep 3600

while true; do
	for f in "$@"; do
		gsiscp ${f} ${DESTINATION} || { grid-proxy-init && gsiscp ${f} ${DESTINATION}; }
	done
	echo sleeping...
	sleep 3600
done

#
# Always end on an error so that condor will restart it
#

exit 1
