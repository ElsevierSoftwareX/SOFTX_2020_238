%{_libdir}/gstreamer-@GSTREAMER_RELEASE@/python/*
%{_prefix}/%{_lib}/python*/site-packages/gstlal

%files devel
%defattr(-,root,root)
%{_libdir}/*.a
%{_libdir}/*.so
%{_libdir}/gstreamer-@GSTREAMER_RELEASE@/*.a
%{_libdir}/pkgconfig/*
%{_includedir}/*
